{
  "name": "portfolio-site",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "validate": "npm run lint && npm run test",
    "hooks:install": "git config core.hooksPath .husky/_",
    "prepare": "npm run hooks:install"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.23.0",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "prettier": "^3.5.3",
    "vitest": "^2.1.8"
  }
}
